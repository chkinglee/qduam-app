<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomePage.User.UserModifyInformationActivity">
    <data>
        <variable
            name="depart"
            type="com.lilinzhen.qduamapplication.Bean.Assn.Depart"/>
        <variable
            name="activity"
            type="com.lilinzhen.qduamapplication.HomePage.User.UserModifyInformationActivity"/>
    </data>

    <LinearLayout
        android:id="@+id/activity_student_modify_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/project_body_background"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_dep_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"
                    android:text="灰色部分信息不可修改，点击隐藏"
                    android:gravity="center"
                    android:onClick="@{activity.onClick}"/>
                <LinearLayout
                    android:id="@+id/ll_dep_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="@dimen/one"
                            android:layout_weight="@integer/fifteen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/fifty_two"
                            android:text="@string/depart_assnname"
                            android:textSize="@dimen/sixteen"
                            android:textColor="@color/view_textview_color"
                            android:gravity="center"/>
                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/two_hundred_and_fifty_three"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:text="@{depart.assn.assnname}"
                                android:textColor="@color/view_edittext_hint_color"
                                android:hint="@string/input_required_hint"
                                android:textSize="@dimen/fourteen"
                                android:gravity="center_vertical|right"
                                android:layout_gravity="center_vertical|right"
                                android:textColorHint="@color/view_edittext_hint_color"
                                android:clickable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:paddingLeft="@dimen/ten"
                                android:paddingTop="@dimen/ten"
                                android:paddingBottom="@dimen/ten"/>
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="@dimen/one"
                            android:layout_weight="@integer/twenty_two"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/project_body_line_background"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="@dimen/one"
                            android:layout_weight="@integer/fifteen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/fifty_two"
                            android:text="@string/depart_depname"
                            android:textSize="@dimen/sixteen"
                            android:textColor="@color/view_textview_color"
                            android:gravity="center"/>
                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/two_hundred_and_fifty_three"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:text="@{depart.depname}"
                                android:textColor="@color/view_edittext_hint_color"
                                android:hint="@string/input_required_hint"
                                android:textSize="@dimen/fourteen"
                                android:gravity="center_vertical|right"
                                android:layout_gravity="center_vertical|right"
                                android:textColorHint="@color/view_edittext_hint_color"
                                android:clickable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:paddingLeft="@dimen/ten"
                                android:paddingTop="@dimen/ten"
                                android:paddingBottom="@dimen/ten"/>
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="@dimen/one"
                            android:layout_weight="@integer/twenty_two"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/project_body_line_background"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="@dimen/one"
                            android:layout_weight="@integer/fifteen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/fifty_two"
                            android:text="@string/depart_logname"
                            android:textSize="@dimen/sixteen"
                            android:textColor="@color/view_textview_color"
                            android:gravity="center"/>
                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/two_hundred_and_fifty_three"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:text="@{depart.logname}"
                                android:textColor="@color/view_edittext_hint_color"
                                android:hint="@string/input_required_hint"
                                android:textSize="@dimen/fourteen"
                                android:gravity="center_vertical|right"
                                android:layout_gravity="center_vertical|right"
                                android:textColorHint="@color/view_edittext_hint_color"
                                android:clickable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:paddingLeft="@dimen/ten"
                                android:paddingTop="@dimen/ten"
                                android:paddingBottom="@dimen/ten"/>
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="@dimen/one"
                            android:layout_weight="@integer/twenty_two"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/project_body_line_background"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:background="@color/project_body_line_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@{depart.id}"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="@dimen/one"
                        android:layout_weight="@integer/fifteen"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fifty_two"
                        android:text="@string/depart_intro"
                        android:textSize="@dimen/sixteen"
                        android:textColor="@color/view_textview_color"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/two_hundred_and_fifty_three"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_dep_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="@={depart.intro}"
                            android:textColor="@color/view_edittext_text_color"
                            android:hint="@string/input_required_hint"
                            android:textSize="@dimen/fourteen"
                            android:gravity="center_vertical|right"
                            android:layout_gravity="center_vertical|right"
                            android:textColorHint="@color/view_edittext_hint_color"
                            android:paddingLeft="@dimen/ten"
                            android:paddingTop="@dimen/ten"
                            android:paddingBottom="@dimen/ten"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="@dimen/one"
                        android:layout_weight="@integer/twenty_two"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/project_body_line_background"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</layout>
