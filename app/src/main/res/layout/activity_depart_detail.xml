<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lilinzhen.qduamapplication.HomePage.Assn.DepartDetailActivity">

    <data>
        <variable
            name="depart"
            type="com.lilinzhen.qduamapplication.Bean.Assn.Depart"/>
        <variable
            name="activity"
            type="com.lilinzhen.qduamapplication.HomePage.Assn.DepartDetailActivity"/>
    </data>
    <LinearLayout
        android:id="@+id/activity_depart_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/project_body_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <View
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/one"
                android:layout_weight="@integer/fifteen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fifty_two"
                android:text="@string/depart_assnname"
                android:textSize="@dimen/sixteen"
                android:textColor="@color/view_textview_color"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/two_hundred_and_fifty_three"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <EditText
                    android:id="@+id/et_dep_asname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/view_edittext_text_color"
                    android:textSize="@dimen/fourteen"
                    android:gravity="center_vertical|right"
                    android:layout_gravity="center_vertical|right"
                    android:hint="@{depart.assn.assnname}"
                    android:textColorHint="@color/view_edittext_hint_color"
                    android:enabled="false"
                    android:paddingLeft="@dimen/ten"
                    android:paddingTop="@dimen/ten"
                    android:paddingBottom="@dimen/ten"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/one"
                android:layout_weight="@integer/twenty_two"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/project_body_line_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <View
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/one"
                android:layout_weight="@integer/fifteen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fifty_two"
                android:text="@string/depart_logname"
                android:textSize="@dimen/sixteen"
                android:textColor="@color/view_textview_color"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/two_hundred_and_fifty_three"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <EditText
                    android:id="@+id/et_dep_logname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@={depart.logname}"
                    android:textColor="@color/view_edittext_text_color"
                    android:textSize="@dimen/fourteen"
                    android:gravity="center_vertical|right"
                    android:layout_gravity="center_vertical|right"
                    android:hint="@string/input_required_hint"
                    android:textColorHint="@color/view_edittext_hint_color"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingLeft="@dimen/ten"
                    android:paddingTop="@dimen/ten"
                    android:paddingBottom="@dimen/ten"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/one"
                android:layout_weight="@integer/twenty_two"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/project_body_line_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <View
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/one"
                android:layout_weight="@integer/fifteen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fifty_two"
                android:text="@string/depart_depname"
                android:textSize="@dimen/sixteen"
                android:textColor="@color/view_textview_color"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/two_hundred_and_fifty_three"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <EditText
                    android:id="@+id/et_dep_depname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@={depart.depname}"
                    android:textColor="@color/view_edittext_text_color"
                    android:textSize="@dimen/fourteen"
                    android:gravity="center_vertical|right"
                    android:layout_gravity="center_vertical|right"
                    android:hint="@string/input_required_hint"
                    android:textColorHint="@color/view_edittext_hint_color"
                    android:paddingLeft="@dimen/ten"
                    android:paddingTop="@dimen/ten"
                    android:paddingBottom="@dimen/ten"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/one"
                android:layout_weight="@integer/twenty_two"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/project_body_line_background"/>

    </LinearLayout>

</layout>


