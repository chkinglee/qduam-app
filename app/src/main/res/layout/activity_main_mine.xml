<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage.Main.MainMineActivity">

    <data>
        <variable
            name="user"
            type="com.lilinzhen.qduamapplication.Bean.User.User"/>
        <variable
            name="activity"
            type="com.lilinzhen.qduamapplication.HomePage.Main.MainMineActivity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/project_body_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_hundred_and_fourty_five"
                    android:orientation="vertical"
                    android:background="@color/project_title_background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourty_five"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/main_radiobutton_mine"
                            android:textSize="@dimen/fifteen"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/fourteen"/>
                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="0.1dp"
                            android:layout_weight="@integer/one"/>
                        <ImageView
                            android:layout_width="@dimen/twenty_five"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/mail"
                            android:onClick="@{activity.onClick}"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/fifteen"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/seventy"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:imageUrl="@{user.pic}"
                            android:layout_width="@dimen/seventy"
                            android:layout_height="@dimen/seventy"
                            android:layout_marginLeft="@dimen/sixteen"
                            android:layout_marginRight="@dimen/sixteen"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{user.name}"
                                android:textSize="@dimen/ninteen"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/ten" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{user.logname}"
                                android:textSize="@dimen/thirteen"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/seven" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/twenty_five"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_main_mine_person"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="@{activity.onClick}">
                    <ImageView
                        android:layout_width="@dimen/twenty_three"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginRight="@dimen/sixteen"
                        android:src="@mipmap/user_information" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="个人信息" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/ten"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrows_right"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/sixteen"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>
                <LinearLayout
                    android:id="@+id/ll_main_mine_ps"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="@{activity.onClick}">
                    <ImageView
                        android:layout_width="@dimen/twenty_three"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginRight="@dimen/sixteen"
                        android:src="@mipmap/user_change_password" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="修改密码" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/ten"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrows_right"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/sixteen"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighteen"/>
                <LinearLayout
                    android:id="@+id/ll_main_mine_problem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="@{activity.onClick}">
                    <ImageView
                        android:layout_width="@dimen/twenty_three"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginRight="@dimen/sixteen"
                        android:src="@mipmap/user_report_problem" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="问题反馈" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/ten"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrows_right"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/sixteen"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>
                <LinearLayout
                    android:id="@+id/ll_main_mine_service"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="@{activity.onClick}">
                    <ImageView
                        android:layout_width="@dimen/twenty_three"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginRight="@dimen/sixteen"
                        android:src="@mipmap/user_service_dict" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="服务指南" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/ten"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrows_right"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/sixteen"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighteen"/>
                <LinearLayout
                    android:id="@+id/ll_main_mine_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="@{activity.onClick}">
                    <ImageView
                        android:layout_width="@dimen/twenty_three"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginRight="@dimen/sixteen"
                        android:src="@mipmap/user_about_us" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="关于我们" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/ten"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrows_right"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/sixteen"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty"/>

                <Button
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty"
                    android:layout_marginLeft="@dimen/seventy_three"
                    android:layout_marginRight="@dimen/seventy_three"
                    android:background="@drawable/login_login_background"
                    android:textColor="@color/white"
                    android:text="登   录"
                    android:onClick="@{activity.onClick}"/>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>

