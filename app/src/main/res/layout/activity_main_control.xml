<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".HomePage.Main.MainControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_article_manager"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="文章管理"
            android:gravity="center"
            />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_assn_manager"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="社团管理"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_work_manager"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="工作管理"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_enroll_manager"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="报名管理"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_depart_manager"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="部门管理"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_director_manager"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="部长管理"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_article_add"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="文章添加"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_assn_add"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="社团添加"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_work_add"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="工作添加"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_enroll_add"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="报名添加"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_depart_add"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="部门添加"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_director_add"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:background="@color/project_body_background"
            android:text="部长添加"
            android:gravity="center" />
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
